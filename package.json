{
  "name": "flutterflow-mcp-server",
  "version": "1.0.0",
  "description": "MCP server for FlutterFlow API integration",
  "main": "build/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "node --max-old-space-size=4096 build/index.js",
    "dev": "tsx src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration", 
    "test:e2e": "jest tests/e2e",
    "test:real-api": "jest tests/real-api --testTimeout=60000",
    "test:mcp-integration": "jest tests/mcp-integration --testTimeout=60000",
    "test:claude-integration": "jest tests/claude-integration --testTimeout=60000",
    "test:full-pyramid": "npm run test:unit && npm run test:real-api && npm run test:mcp-integration && npm run test:claude-integration"
  },
  "keywords": [
    "mcp",
    "flutterflow",
    "api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "@types/adm-zip": "^0.5.7",
    "@types/js-yaml": "^4.0.9",
    "adm-zip": "^0.5.16",
    "axios": "^1.7.7",
    "js-yaml": "^4.1.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^22.5.4",
    "@types/supertest": "^6.0.3",
    "jest": "^30.1.3",
    "nock": "^14.0.10",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1",
    "tsx": "^4.19.1",
    "typescript": "^5.6.2"
  }
}
